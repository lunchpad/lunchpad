$flex-box-gutter: 0;

.flex-boxes {
  @include clearfix;
  @include display(flex);
  @include justify-content(center);
  @include align-items(stretch);
  @include flex-wrap(wrap);
  text-align: center;
}

.card-wrapper {
  margin-top: 0px;
  margin-bottom: 15px;

  @include media(em(1050)) {
    margin-left: 10%;
    margin-right: 10%;
  }
}

.flex-box {
  @include transition (all 0.2s ease-in-out);
  @include flex(2 2 15em);
  @include align-self(stretch);
  display: block;
  margin: $flex-box-gutter;
}

.card-settings {
  @include flex(1 1 40em);
  @include span-columns(8);
  @include omega();
  border-radius: 2px;
  background: #FFFFFF;
  box-shadow: 0px 2px 2px 0px rgba(0, 0, 0, 0.12), 0px 0px 2px 0px rgba(0, 0, 0, 0.24);
  margin-bottom: 15px;
  max-width: 700px;

  h1 {
    font-size: 24px;
    color: #2E7D32;
    line-height: 28px;
  }
}

.card {
  @extend .card-settings;
  max-width: 700px;
}

.card-wide {
  @extend .card-settings;
  max-width: 900px;
}

.card-row {
  width: 100%;
}

.card-column-left {
  @include transition (all 0.2s ease-in-out);
  @include flex(2 2 15em);
  @include align-self(stretch);
  display: block;
  margin: $flex-box-gutter;
  max-width: 260px;

  ul {
    padding-top: 20px;
    @extend .card_margin;
    clear: left;
    list-style-type: none;
  }
  li {
    display: block;
    padding-bottom: 10px;
    font-size: 14px;
  }

  li:last-child {
    padding-bottom: 10px;
  }

  a {
    font-size: 14px;
