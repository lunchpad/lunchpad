.bullets {

  ///////////////////////////////////////////////////////////////////////////////////
  $base-line-height: 1.5em !default;
  $base-accent-color: #7E57C2;
  $base-link-color: $base-accent-color !default;
  $dark-gray: #333 !default;
  $base-font-color: $dark-gray !default;
  -webkit-font-smoothing: antialiased;
  position: absolute;
  top: 900px;
  height: 250px;
  @include padding(0 20px 0 20px);
  font-family: 'Roboto', sans-serif;


  h2 {
    margin: 0;
    font-family: 'Roboto', sans-serif;
  }

  li {
    list-style: none;
  }

  p {
    color: $base-font-color;
    line-height: $base-line-height;
  }

  img {
    max-width: 100%;
  }

  //////////////////////////////////////////////////////////////////////////////////

  $icon-bullet-size: 3.5em;

  @include display(flex);
  @include flex-wrap(wrap);
  margin-bottom: $base-line-height;
  margin: 1em;
  overflow: auto;

  .bullet {
    @include flex-basis(20em);
    @include flex-grow(1);
  }

  .bullet-icon {
    background: $base-accent-color;
    border-radius: 50%;
    float: left;
    height: $icon-bullet-size;
    padding: $icon-bullet-size /4;
    width: $icon-bullet-size;
  }

  .bullet-icon-1 {
    background: $base-accent-color;
    .fa {
      font-size: 30px;
    }
  }

  .bullet-icon-2 {
    background: adjust-hue($base-accent-color, -50);

    .fa {
      font-size: 28px;
    }
  }

  .bullet-icon-3 {
    background: #F8B836;
    .fa {
      font-size: 31px;
    }
  }

  .bullet-content {
    margin-left: $icon-bullet-size *1.4;
    margin-bottom: 2em;
  }

  h2 {
    border-bottom: 1px solid transparentize($base-font-color, .8);
    display: inline-block;
    font-size: $icon-bullet-size /2.5;
    margin-bottom: $icon-bullet-size /6;
    padding-top: $icon-bullet-size /7;
  }
}
